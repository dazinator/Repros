<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Todo.AccountSelectPage" Title="Todo">
	
    <StackLayout Margin="0,0,0,0" Orientation="Vertical">
        
        <ListView x:Name="listView" Margin="20" ItemTapped="OnListItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Margin="20" VerticalOptions="StartAndExpand">
                            <Label Text="{Binding Name}" VerticalTextAlignment="Center" HorizontalOptions="CenterAndExpand" />
                            <Label Text="{Binding Server}" VerticalTextAlignment="Center" HorizontalOptions="CenterAndExpand" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
    
   
   
</ContentPage>